<h1>Hive OS X: Download Stats</h1>
<h2>Snapshot at <%= @snapshot.created_at %></h2>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Download count</th>
    </tr>
  </thead>

  <tbody>
    <% @snapshot.releases.each do |release| %>
      <tr>
        <td><%= release.tag %></td>
        <td><%= release.download_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
