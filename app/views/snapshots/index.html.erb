<h1>Hive Web & iOS: Wallet Stats</h1>

<% if @latest_web_snapshot.present? %>
  <section>
    <table>
      <thead>
        <tr>
          <th>Created at</th>
          <th>Count</th>
        </tr>
      </thead>

      <tbody>
        <% @web_snapshots.each do |snapshot| %>
          <tr>
            <td><%= snapshot.created_at %></td>
            <td><%= snapshot.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
<% end %>

<h1>Hive OS X: Download Stats</h1>

<% if @latest_snapshot.present? %>
  <section>
    <h2>Last update at: <%= @latest_snapshot.created_at %></h2>

    <table>
      <thead>
        <tr>
          <th>Tag</th>
          <th>Download count</th>
        </tr>
      </thead>

      <tbody>
        <% @latest_snapshot.releases.each do |release| %>
          <tr>
            <td><%= release.tag %></td>
            <td><%= release.download_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>

  <section>
    <h2>Past Snapshots</h2>

    <table>
      <thead>
        <tr>
          <th>Created at</th>
        </tr>
      </thead>

      <tbody>
        <% @snapshots.each do |snapshot| %>
          <tr>
            <td><%= link_to snapshot.created_at, snapshot %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
<% else %>
    No snapshot data
<% end %>
